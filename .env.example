# SpectroSense Environment Configuration

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional backup/alternative LLM

# Processing Configuration
MAX_SEGMENT_DURATION=10  # Maximum duration for each spectrogram segment in seconds
SAMPLE_RATE=44100  # Default sample rate if not specified in file
FFT_SIZE=1024     # FFT size for spectrogram generation
OVERLAP=512       # Overlap for spectrogram generation

# Output Configuration
OUTPUT_DIR=./output
SAVE_INTERMEDIATE=true  # Save intermediate spectrograms
IMAGE_FORMAT=png    # Format for saving spectrograms (png/jpg)
REPORT_FORMAT=json  # Format for analysis reports (json/yaml)

# Visualization Settings
COLORMAP=viridis   # Matplotlib colormap for spectrograms
FIGURE_DPI=300     # DPI for saved figures
FIGURE_WIDTH=10    # Figure width in inches
FIGURE_HEIGHT=6    # Figure height in inches

# Database Configuration (if using web application)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spectrosense
DB_USER=user
DB_PASSWORD=password

# Web Application Settings
FLASK_APP=spectrosense.web.app
FLASK_ENV=development
FLASK_DEBUG=1
HOST=0.0.0.0
PORT=5000

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=spectrosense.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
SECRET_KEY=your_secret_key_here  # For web application sessions
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Model Configuration
DEFAULT_MODEL=claude-3-opus-20240229  # Default AI model to use
CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for signal classification

# Feature Flags
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_GPU_ACCELERATION=false